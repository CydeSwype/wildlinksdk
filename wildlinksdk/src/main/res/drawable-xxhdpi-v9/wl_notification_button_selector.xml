<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
            <padding android:bottom="@dimen/wl_button_top_bottom_padding" android:left="0dp" android:right="0dp" android:top="@dimen/wl_button_top_bottom_padding"/>

            <corners android:radius="0dp"/>
            <stroke android:color="@color/wl_button_outer_color" android:width="1dp"/>
            <solid
                android:color="@color/wl_button_background_selected"/>

        </shape>

    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">

            <padding android:bottom="@dimen/wl_button_top_bottom_padding" android:left="0dp" android:right="0dp" android:top="@dimen/wl_button_top_bottom_padding"/>
            <corners android:radius="0dp"/>
            <solid android:color="@color/wl_button_background_unselected"/>
        </shape>

    </item>


</selector>